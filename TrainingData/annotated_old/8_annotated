2 <text font="4" height="11" left="81" textpieces="0" top="1054" width="268">http://dico.isc.cnrs.fr/dico/en/search</text>
2 <text font="4" height="11" left="81" textpieces="0" top="1068" width="226">http://dictionary.reference.com/</text>
