2 <text font="0" height="25" left="144" textpieces="0" top="109" width="627">Fast Learning for Sentiment Analysis on Bullying</text>
2 <text font="1" height="17" left="183" textpieces="0" top="177" width="210">Jun-Ming Xu, Xiaojin Zhu</text>
2 <text font="2" height="14" left="173" textpieces="0" top="195" width="230">Department of Computer Sciences</text>
2 <text font="2" height="14" left="180" textpieces="0" top="210" width="216">University of Wisconsin-Madison</text>
2 <text font="2" height="14" left="204" textpieces="0" top="226" width="168">Madison, WI 53706, USA</text>
2 <text font="1" height="17" left="173" textpieces="0" top="240" width="230">{xujm,jerryzhu}@cs.wisc.edu</text>
2 <text font="1" height="17" left="571" textpieces="0" top="177" width="111">Amy Bellmore</text>
2 <text font="2" height="14" left="498" textpieces="0" top="195" width="258">Department of Educational Psychology</text>
2 <text font="2" height="14" left="519" textpieces="0" top="210" width="216">University of Wisconsin-Madison</text>
2 <text font="2" height="14" left="543" textpieces="0" top="226" width="168">Madison, WI 53706, USA</text>
